@model IEnumerable<HatliFood.Models.Category>

@{
    ViewData["Title"] = "Categories";
}


<h2 class="text-center mt-5 mb-5">All Categories </h2>

<div class="container m-5 p-3">
    <div class="row d-flex flex-wrap">
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                   <div class="card col-4 p-2 ms-2" style="box-shadow: 2px 3px 5px #59889a;">

                          <h5 class="text-center">  @item.Name </h5>

                          <div class="card-body">

                             <div class="row">
                                  <a asp-action="Edit" asp-route-id="@item.Id" class="btn-primary btn col-3 "> Edit</a> 
                                  <a asp-action="Details" asp-route-id="@item.Id" class="btn-success btn col-4 mx-2"  > Details</a> 
                                  <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger btn col-4 ">Delete</a>
                              </div>

                          </div>
                   </div>

            }
               <a class="card col-md-3 col-xs-12 btn-light mx-2 text-decoration-none" asp-action="Create" style="box-shadow: 1px 2px 5px #59889a;">
                    <span  class="btn mx- fs-4 m-auto " style="float-right;">Create New</span>
                </a>  
        }
        else
        {
             <div class="alert text-center fs-3" > 
                         No Categories now...
                           <a class="card col-md-2 col-xs-12 btn-light my-3 p-2 fs-6 m-auto text-decoration-none bg-dark " asp-action="Create" style="color: #FF9E00" > 
                           Create New</a>

                    
            </div>
        }
       
    </div>
</div>






