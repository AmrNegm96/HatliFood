@model HatliFood.Models.Category

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RidNavigation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RidNavigation.Name)
        </dd>

        <dt></dt>
        <dd>
            @{
                if (ViewBag.CountOfItems > 0)
                {
                    @foreach (var Menu in ViewBag.Items)
                    {
                            <h4> @Menu.Name </h4>

                    }
                }
                else
                {
                    <div class="alert alert-primary"> No Menu Items in this catrgory yet</div>
                }   
            }
           
        </dd>


    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
