@model IEnumerable<HatliFood.Models.Restaurant>

@{
    ViewData["Title"] = "AllRestaurants";
}
@*<head>
    <link rel="stylesheet" href="~/css/BuyerRestaurantMain.css" />
</head>*@

<h1 class="text-center py-3">Choose Your Craving</h1>

<div class="container my-3">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card col-4 m-auto" style="width: 300px; height: 300px">
                    <img class="card-img-top rounded-circle m-auto py-3" style="width: 170px; height: 170px; object-fit: fill; " src="~/image/resturants/@item.ImgPath" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title text-center">@item.Name</h5>
                    <a class="btn btn-success w-100" asp-action="ViewRestaurantMenu" asp-controller="Restaurants" asp-route-id="@item.Id">View Menu</a>
                </div>
            </div>
        }
    </div>
</div>