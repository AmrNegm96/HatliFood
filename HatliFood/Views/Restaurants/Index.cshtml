@model IEnumerable<HatliFood.Models.Restaurant>

@{
    ViewData["Title"] = "Resturants";
}

<h2 class="text-center mt-5 mb-5">All Resturants </h2>


<div class="container">
    
        <div class="row d-flex flex-wrap mx-5"  style="margin-left:50px; "  >
        @{
            if(Model.Count() > 0)
            {
                @foreach (var item in Model)
                {

                                 <div class="card col-md-4 col-xs-12 mb-4 mx-2" style="width:31%; box-shadow: 1px 2px 5px #59889a;">
                                 <img src="~/Image/Resturants/@item.ImgPath" alt="image" style="width:120px ; height:120px" class="rounded-circle m-auto pt-2"/>

                               <div class="card-body">
                                        <h5 class="card-title text-center py-2">@item.Name</h5>
                                    <div class="row">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn-primary btn col-3 "> Edit</a> 
                                                    <a asp-action="RestaurantDetails" asp-route-id="@item.Id" class="btn-success btn col-4 mx-2"  > Details</a> 
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger btn   col-4 ">Delete</a>
                                    </div>

                               </div>

                             </div>
                }

                   <a class="card col-md-3 col-xs-12 mb-4 btn-light mx-2 text-decoration-none" asp-action="Create" style="box-shadow: 1px 2px 5px #59889a;">
                        <span  class="btn mx- fs-4 m-auto" style="float-right;">Create New</span>

                    </a>  
            }
            else{
                <div class="alert text-center fs-3" > 
                         No Resturant now...  
                           <a class="card col-md-2 col-xs-12 btn-light my-3 p-2 fs-6 m-auto text-decoration-none bg-dark " asp-action="Create" style="color: #FF9E00" > 
                           Create New</a>

                    </div>
            }
        }
            

        </div>
           
    
</div>
