@model HatliFood.Models.MenuItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MenuItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group row">
                <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Price" class="form-control" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group row">
                <input asp-for="ImgPath" class="form-control" type="hidden" value="jdjdj" />
            </div>


            <div class="form-group row">
                <label asp-for="ImgFile" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ImgFile" class="form-control" type="file" accept="image/*" />
                </div>
                <span asp-validation-for="ImgFile" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group row">
                <label asp-for="Cid" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select asp-for="Cid" class="form-control" asp-items="ViewBag.Cid"></select>
                </div>
            </div>
            <br />

            <div class="form-group row">
                <input type="submit" value="Add" class="btn btn-primary col-sm-3 m-2" />
                <a asp-action="Index" type="button" class="btn btn-secondary col-sm-3  m-2">Back to List</a>

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}