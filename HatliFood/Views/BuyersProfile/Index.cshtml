@inject UserManager<IdentityUser> UserManager;

@{
    Buyer buyer = ViewBag.Buyer;
    string fullName = buyer.FirstName + " " + buyer.LastName;
}
<div class="d-flex justify-content-center align-items-center">
    <div style="text-align:center">
        <div>
            <h1> Welcome @fullName! </h1>
            <h2>Update Your Profile</h2>
        </div>

        <div class="container my-4">
            <div class="row">
                <div class="form-group col-6">
                    <label class="control-label">Change Phone</label>
                    <input class="form-control my-4" placeholder="Phone" />
                    <a class="btn btn-primary" asp-action="UpdatePhone" asp-controller="BuyerProfile">Confirm New Phone</a>
                </div>
                <div class="form-group col-6">
                    <label class="control-label">Change Password</label>
                    <input class="form-control my-4" placeholder="New Password" />
                    <a class="btn btn-primary" asp-action="UpdatePassword" asp-controller="BuyerProfile">Confirm New Password</a>
                </div>
            </div>
        </div>

        <div class="my-4">
            <a class="btn btn-primary" asp-route-id="@buyer.UserId" asp-action="Index" asp-controller="Addresses">Manage Your Addresses</a>
        </div>

    </div>
</div>