@model IEnumerable<HatliFood.Models.Order>

@{
    ViewData["Title"] = "History";
}

<h1>Order History</h1>

<p>
    <a asp-action="AllRestaurants" asp-controller="Restaurants">Go To HomePage</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderState)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.Restaurant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Restaurant.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">View Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
